    <LinearLayout
        android:id="@+id/home_live_channel"
        android:layout_width="@dimen/dph210"
        android:layout_height="@dimen/dph160"
        android:layout_marginLeft="@dimen/dph3">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dph2"
            app:cardCornerRadius="@dimen/dph7"
            app:cardElevation="@dimen/dph5">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dph130"
                    android:layout_marginBottom="@dimen/dph5"
                    app:cardCornerRadius="@dimen/dph7"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5">


                    <ImageView
                        android:id="@+id/single_item_home_live_channel_civ"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       android:scaleType="fitXY"
                        app:srcCompat="@mipmap/landscape_placeholder" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/single_item_home_live_channel_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="@string/app_name"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#b7000000"
                    android:textSize="@dimen/sp13" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>