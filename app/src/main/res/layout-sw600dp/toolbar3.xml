<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:id="@+id/close_toolbar3"
        android:src="@drawable/close_btn"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_toRightOf="@+id/close_toolbar3"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:layout_toLeftOf="@+id/like_bhajan_toobar3"
    android:layout_centerVertical="true">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:text="@string/terms"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/bhajan_name_toolbar3"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp11"
        android:text="@string/terms"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/artist_name_toolbar3"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp2"/>
</LinearLayout>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:id="@+id/like_bhajan_toobar3"
        android:src="@drawable/like_btn"
        android:layout_toLeftOf="@+id/more_options_toolbar3"
        android:layout_centerVertical="true"
       />

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/more_options_toolbar3"
        android:src="@drawable/option_btn"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
</RelativeLayout>