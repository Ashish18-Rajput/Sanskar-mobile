<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/intro_indicator_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/intro_indicator_selected" />
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:id="@+id/view1"
            android:layout_marginTop="14dp"
            android:background="#8C8989"/>
        <ImageView
            android:id="@+id/intro_indicator_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:src="@drawable/intro_indicator_unselected" />
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:id="@+id/view2"
            android:visibility="gone"
            android:layout_marginTop="14dp"
            android:background="#8C8989"/>

        <ImageView
            android:id="@+id/intro_indicator_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="5dp"
            android:src="@drawable/intro_indicator_unselected" />
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginTop="14dp"
            android:id="@+id/view3"
            android:background="#8C8989"/>
        <ImageView
            android:id="@+id/intro_indicator_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="5dp"
            android:src="@drawable/intro_indicator_unselected" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Plan"
            android:id="@+id/intro_textView1"
            android:textColor="@color/selected"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Sign In"
            android:visibility="gone"
            android:layout_marginLeft="35dp"
            android:id="@+id/intro_textView2"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Pay"
            android:layout_marginLeft="55dp"
            android:id="@+id/intro_textView3"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Watch"
            android:layout_marginLeft="42dp"
            android:id="@+id/intro_textView4"
            android:textStyle="bold"
            android:textSize="18sp"/>


    </LinearLayout>

</LinearLayout>