<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bhajan_single_category_single_item_holder_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dph190"
        android:layout_height="@dimen/dph150"
        android:layout_marginLeft="@dimen/dph3">

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/dph5"
            app:cardElevation="@dimen/dph5"
            android:layout_margin="@dimen/dph2">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dph105"
                    android:layout_marginBottom="@dimen/dph5"
                    app:cardCornerRadius="@dimen/dp5">


                    <ImageView
                        android:id="@+id/bhajan_single_category_single_item_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/landscape_placeholder" />

                    <ImageView
                        android:id="@+id/mp3_video_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@mipmap/mp3"
                        android:layout_gravity="bottom"
                        android:visibility="gone"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/bhajan_single_category_single_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="asjdgvasjv"
                    android:paddingLeft="@dimen/dp10"
                    android:textColor="#b7000000"
                    android:textSize="@dimen/sp13"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/desc_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="asjdgvasjv"
                    android:paddingLeft="@dimen/dp10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#b7000000"
                    android:textSize="@dimen/sp12"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:visibility="visible"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>