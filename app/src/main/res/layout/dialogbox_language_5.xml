<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanskar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp10"
        android:id="@+id/this_payment"
        android:textColor="@color/download_bhajan"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp220"
        android:layout_height="@dimen/dp160"
        app:cardCornerRadius="@dimen/dph10"
        android:id="@+id/cardView"
        android:layout_below="@id/this_payment"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/dph5"
        android:layout_marginTop="@dimen/dp20">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewWallPaper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/landscape_placeholder" />

                <ImageView
                    android:id="@+id/lock_video_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_lock_open_24"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sanskar"
        android:layout_below="@id/cardView"
        android:layout_marginTop="25dp"
        android:id="@+id/message"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp100"
        android:layout_alignParentRight="true"
        android:src="@mipmap/sign_up_welcome" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Ok"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/message"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background2"
        android:gravity="center"
        android:text="cancel"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/dph130"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/button_background3"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="Download"
        android:textAllCaps="false"
        android:id="@+id/btn_premium"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/message"
        android:layout_marginTop="50dp"/>

</RelativeLayout>