<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.sanskar.tv.slidinguppanelhelper.SlidingUpPanelLayout
        xmlns:sanskar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sanskar:dragView="@+id/dragView"
        sanskar:overlay="true"
        sanskar:panelHeight="?attr/actionBarSize"
        sanskar:parallaxOffset="?attr/actionBarSize"
        sanskar:shadowHeight="4dp">

        <!-- MAIN CONTENT -->

        <include
            android:id="@+id/sliding_panelchildone"
            layout="@layout/slidingpanel_childone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- SLIDING LAYOUT -->

        <include
            android:id="@+id/sliding_panel_childtwo"
            layout="@layout/slidingpanel_childtwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.sanskar.tv.slidinguppanelhelper.SlidingUpPanelLayout>

</LinearLayout>