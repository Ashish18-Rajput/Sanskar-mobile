<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_rl"
    android:layout_width="@dimen/dp250"
    android:layout_height="@dimen/dp130"
    android:layout_margin="@dimen/dp10"
    android:background="@drawable/button_background1">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp5"
        android:scaleType="fitXY"
        android:src="@drawable/sanskar_header_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp10">

        <RelativeLayout
            android:id="@+id/now_playing_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#F80938"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp5"
                android:text="Now Playing"
                android:textColor="@color/whiteBgColor"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/live_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#F80938">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp5"
                android:text="Live"
                android:textColor="@color/whiteBgColor"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/event_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/now_playing_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp16">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="@dimen/dp240"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Sant Murlidhar ji Maharaj"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="@dimen/dp240"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp10"
                android:gravity="center"
                android:text="09:30 AM - 01:00 PM"
                android:textColor="#F57C00"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>